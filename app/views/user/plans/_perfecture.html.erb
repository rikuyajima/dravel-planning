<table class="perfecture-table table table-bordered table-hover">
  <thead class="perfecture">
    <tr>
      <th class="active table-active">新規投稿</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= link_to 'プランを投稿', new_plan_path, class:"ec-genre-list-item text-dark" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= link_to 'スポットを申請', new_spot_path, class:"ec-genre-list-item text-dark" %>
      </td>
    </tr>
  </tbody>
</table>
<div class="search_form">
  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <div class="spot_form"><%= f.text_field :word %></div>
    <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
    <%= f.submit "検索" %>
  <% end %>
</div>
<div onclick="obj=document.getElementById('perfecturelist').style; obj.display=(obj.display=='none')?'block':'none';">
  <table class="perfecture-table table table-bordered table-hover">
    <thead class="perfecture">
      <tr>
        <th class="active table-active">
          <a style="cursor:pointer;">都道府県スポット</a>
        </th>
      </tr>
    </thead>
  </table>
</div>

<div id="perfecturelist" style="display:none;clear:both;">
<table class="perfecture-table table table-bordered table-hover">
  <tbody>
    <% perfectures.each do |perfecture| %>
    <tr>
      <td>
        <%= link_to perfecture.name, perfecture_path(perfecture.id), class:"ec-genre-list-item text-dark"%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
