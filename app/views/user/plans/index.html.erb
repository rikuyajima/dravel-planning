<div class="container">
  <div class="mx-auto">
    <div>
      <p id="notice" class="text-center"><%= notice %></p>
    </div>
  </div>
</div>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-2'>
      <%= render 'user/plans/perfecture', perfectures: @perfectures%>
    </div>
    <div class='col-md-10 '>
      <div class="text-center">
      <%= image_tag 'planall_black.png', size: "220x60" %>
      <!--タブ切り替え機能-->
      <div class="tab">
          <input type="radio" name="tab" id="meat1" checked>
          <label for="meat1">新着投稿一覧</label>
          <input type="radio" name="tab" id="meat2">
          <label for="meat2">お気に入り登録順</label>
       <div class="plans">
          <div>
            <h4>新着順:<%= @count %>件ヒット</h4>
            <%= render 'user/plans/index', plans: @search_plans %>
          </div>
          <div>
            <h4>お気に入り順:<%= @count %>件ヒット</h4>
            <%= render 'user/plans/index', plans: @favorites %>
          </div>
       </div>
       </div>
       </div>
    </div>
  </div>
</div>
