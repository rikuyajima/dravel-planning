<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<%= render "user/shared/error_messages", obj: @user %>
<div class="container">
   <div class="row ml-4">
    <div class="col-9 px-0 mt-3 ml-4">   <h2>Log in</h2>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="field">
        <%= f.label :Eメール %><br />
        <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "button" %>
      </div>
    <% end %>

    <%= render "user/shared/links" %>
    </div>
  </div>
</div>