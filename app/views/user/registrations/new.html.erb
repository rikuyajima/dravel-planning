<div class="container">
  <div class="row ml-4">
    <div class="col-9 px-0 mt-3 ml-4">
      <h4 class="mb-4"><strong>新規会員登録</strong></h4>

        <div class="shadow-lg px-5 py-5">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "user/shared/error_messages", resource: resource %>
            <table class="table pl-5">
              <tr>
                <th>アカウントネーム</th>
                <th><%= f.text_field :name %></th>
              </tr>
    
              <tr>
                <th>Eメール</th>
                <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </tr>

              <tr>
                <th><%= f.label :パスワード %></th>
                    <% if @minimum_password_length %>
                <th>
                    <em>(<%= @minimum_password_length %> 桁以上で登録してください)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password" %>
                </th>
              </tr>

              <tr>
                <th><%= f.label :パスワード確認 %></th>
                <th><%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
              </tr>

              <tr>
                <th><%= f.submit "会員登録", class: "button" %>  <!--登録後はユーザーの詳細ページに遷移します-->
              </tr>
            </table>
          <% end %>
        </div>
      </div>
   </div>
</div>
<div class="container">
  <div class="row ml-4">
    <div class="col-9 px-0 mt-3 ml-4">
      <span>会員登録がお済みの方はこちら！</span>
      <%= render "user/shared/links" %>
    </div>
  </div>
</div>