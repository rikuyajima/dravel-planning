<div class="container">
   <div class="mx-auto">
      <div class="col-12">
      <h4 class="mb-4"><strong>新規会員登録</strong></h4>
        <div class="shadow-lg px-4 py-4">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "user/shared/error_messages", resource: resource %>
            <div class="area">
              <div class="area_space">
                <div>アカウントネーム</div>
                <div class="plan_form"><%= f.text_field :name %></div>

                <div>Eメール</div>
                <div class="plan_form"><%= f.text_field :email, autofocus: true, autocomplete: "email" %></div>

                <div><%= f.label :パスワード %></div>
                <% if @minimum_password_length %>
                <div class="plan_form">
                <em>(<%= @minimum_password_length %> 桁以上で登録してください)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
                </div>

                <div><%= f.label :パスワード確認 %></div>
                <div class="plan_form"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>


                <div class="edit_btn"><%= f.submit "会員登録", class: "button" %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row ml-4">
    <div class="col-9 px-0 mt-3 ml-4">
      <span>会員登録がお済みの方はこちら！</span>
      <%= render "user/shared/links" %>
    </div>
  </div>
</div>