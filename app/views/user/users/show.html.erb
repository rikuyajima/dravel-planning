<div class="container">
   <div class="mx-auto">
     <div class="text-center">
       <div class="rounded-circle">
          <%= link_to image_tag(@user.get_profile_image.variant(resize: '200x200'), class:"user-icon"), "#" %>
       </div>
       <div class="area_space">
          <%= @user.name %>
       </div>
       <div class="profile">
          <%= @user.profile %>
       </div>
       <div class="edit_profile">
          <% if @user == current_user %>
          <%= link_to "編集する", edit_user_path(@user), class:"btn btn-sm btn-success" %>
          <% end %>
       </div>

       <div class="tab">
          <input type="radio" name="tab" id="meat1" checked>
          <label for="meat1">投稿履歴一覧</label>
          <input type="radio" name="tab" id="meat2">
          <label for="meat2">お気に入り一覧</label>
       <div class="foods">
          <div><%= render 'user/plans/index', plans: @plans %></div>
          <div><%= render 'user/plans/index', plans: @favorites %></div>
       </div>
       </div>
     </div>
  </div>
</div>









